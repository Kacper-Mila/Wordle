<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Wordle.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,40,30,0"
            Spacing="25">
            <VerticalStackLayout 
                VerticalOptions="Center"
                Spacing="5">
                <Image
                    Source="wordleico.png"
                    HeightRequest="185"
                    Aspect="AspectFit"
                    SemanticProperties.Description="Icon taken from some other wordle app" />

                <Label
                    Text="Wordle knockoff!"
                    Style="{StaticResource Headline}"
                    SemanticProperties.HeadingLevel="Level1" />
            </VerticalStackLayout>
            <VerticalStackLayout 
                HorizontalOptions="Center"
                Spacing="5">
                <Button
                    Margin="0, 10, 0, 0"
                    Text="Solve Wordle"
                    Clicked="OnStartClicked" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
